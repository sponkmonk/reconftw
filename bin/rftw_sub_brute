#!/bin/bash

# Default config path
CONFIG_PATH="${RECONFTW_CFG}"

# Check if the config file exists
if [[ -f "${CONFIG_PATH}" ]]; then
    source "${CONFIG_PATH}"
else
    echo "Error: reconftw.cfg not found at ${CONFIG_PATH}!"
    exit 1
fi

# Help menu
display_help() {
	echo "$(basename "$0") [Options]"
	echo "Options:"
	echo "  -h, --help              Display this help and exit"
	echo "  -d, --domain            Domain for which subdomain enumeration is required"
	echo "  -o, --output OUTPUT_FILE Specify the output file"
	echo
	echo "Ensure all required environment variables are set in reconftw.cfg"
	exit 1
}

# Initialize input_file and output_file variables
output_file=""

# Parse input arguments
while [[ $# -gt 0 ]]; do
	case $1 in
	-h | --help) display_help ;;
	-d | --domain)
		DOMAIN="$2"
		shift
		;;
	-o | --output)
		shift
		output_file="$1"
		touch "${output_file}" 2>/dev/null || {
			echo "Error: Cannot write to the specified output file."
			exit 1
		}
		;;
	*)
		echo "Unknown parameter passed: $1"
		display_help
		;;
	esac
	shift
done

# Main logic
sub_brute() {
	mkdir -p .tmp 2>/dev/null
	if [[ ${AXIOM} != true ]]; then
		rftw_util_resolver_quick_local
		if [[ ${DEEP} == true ]]; then
			puredns bruteforce "${subs_wordlist_big}" "${DOMAIN}" -w .tmp/subs_brute.txt -r "${resolvers}" --resolvers-trusted "${resolvers_trusted}" -l "${PUREDNS_PUBLIC_LIMIT}" --rate-limit-trusted "${PUREDNS_TRUSTED_LIMIT}" --wildcard-tests "${PUREDNS_WILDCARDTEST_LIMIT}" --wildcard-batch "${PUREDNS_WILDCARDBATCH_LIMIT}" 2>/dev/null
		else
			puredns bruteforce "${subs_wordlist}" "${DOMAIN}" -w .tmp/subs_brute.txt -r "${resolvers}" --resolvers-trusted "${resolvers_trusted}" -l "${PUREDNS_PUBLIC_LIMIT}" --rate-limit-trusted "${PUREDNS_TRUSTED_LIMIT}" --wildcard-tests "${PUREDNS_WILDCARDTEST_LIMIT}" --wildcard-batch "${PUREDNS_WILDCARDBATCH_LIMIT}" 2>/dev/null
		fi
		[[ -s ".tmp/subs_brute.txt" ]] && puredns resolve .tmp/subs_brute.txt -w "${output_file}" -r "${resolvers}" --resolvers-trusted "${resolvers_trusted}" -l "${PUREDNS_PUBLIC_LIMIT}" --rate-limit-trusted "${PUREDNS_TRUSTED_LIMIT}" --wildcard-tests "${PUREDNS_WILDCARDTEST_LIMIT}" --wildcard-batch "${PUREDNS_WILDCARDBATCH_LIMIT}" 2>/dev/null
	else
		rftw_util_resolver_quick_axiom
		if [[ ${DEEP} == true ]]; then
			axiom-scan "${subs_wordlist_big}" -m puredns-single "${DOMAIN}" -r /home/op/lists/resolvers.txt --resolvers-trusted /home/op/lists/resolvers_trusted.txt --wildcard-tests "${PUREDNS_WILDCARDTEST_LIMIT}" --wildcard-batch "${PUREDNS_WILDCARDBATCH_LIMIT}" -o .tmp/subs_brute.txt "${AXIOM_EXTRA_ARGS}" 2>/dev/null
		else
			axiom-scan "${subs_wordlist}" -m puredns-single "${DOMAIN}" -r /home/op/lists/resolvers.txt --resolvers-trusted /home/op/lists/resolvers_trusted.txt --wildcard-tests "${PUREDNS_WILDCARDTEST_LIMIT}" --wildcard-batch "${PUREDNS_WILDCARDBATCH_LIMIT}" -o .tmp/subs_brute.txt "${AXIOM_EXTRA_ARGS}" 2>/dev/null
		fi
		[[ -s ".tmp/subs_brute.txt" ]] && axiom-scan .tmp/subs_brute.txt -m puredns-resolve -r /home/op/lists/resolvers.txt --resolvers-trusted /home/op/lists/resolvers_trusted.txt --wildcard-tests "${PUREDNS_WILDCARDTEST_LIMIT}" --wildcard-batch "${PUREDNS_WILDCARDBATCH_LIMIT}" -o "${output_file}" "${AXIOM_EXTRA_ARGS}" 2>/dev/null
	fi
}

sub_brute
