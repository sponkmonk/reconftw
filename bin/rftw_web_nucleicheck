#!/bin/bash

# Default config path
CONFIG_PATH="${RECONFTW_CFG}"

# Check if the config file exists
if [[ -f "${CONFIG_PATH}" ]]; then
    source "${CONFIG_PATH}"
else
    echo "Error: reconftw.cfg not found at ${CONFIG_PATH}!"
    exit 1
fi

# Help menu
display_help() {
	echo "$(basename "$0") [Options]"
	echo
	echo "  -f, --file              File containing domains for web probing"
	echo "  -o, --output-dir        Output dir location"
	echo "  -h, --help              Display this help and exit"
	echo
	echo "Example: $0 -f input.txt -o output.txt"
	exit 1
}

# Parse input arguments
while [[ $# -gt 0 ]]; do
	case $1 in
	-f | --file)
		input_file="$2"
		shift
		;;
	-o | --output)
		output_dir="$2"
		shift
		;;
	-h | --help) display_help ;;
	*)
		echo "Unknown parameter passed: $1"
		exit 1
		;;
	esac
	shift
done

# Input validation
if [[ -z ${DOMAIN_FILE} ]]; then
	display_help
	exit 1
fi

# Validate file
if [[ ! -f ${DOMAIN_FILE} ]]; then
	echo "Error: Specified file does not exist or is not readable."
	exit 1
fi

nuclei -update
mkdir -p nuclei_output

if [[ ${AXIOM} != true ]]; then
	IFS=',' read -ra severity_array <<<"$NUCLEI_SEVERITY"
	for crit in "${severity_array[@]}"; do
		printf "${yellow}\n Running : Nuclei $crit ${reset}\n\n"
		nuclei $NUCLEI_FLAGS -severity $crit -nh -rl $NUCLEI_RATELIMIT -o ${output_dir}/${crit}.txt <${input_file} 2>/dev/null
		[[ -s "${output_dir}/${crit}.txt" ]] && cat ${output_dir}/${crit}.txt
	done
	printf "\n\n"
else
	IFS=',' read -ra severity_array <<<"$NUCLEI_SEVERITY"
	for crit in "${severity_array[@]}"; do
		printf "${yellow}\n Running : Nuclei $crit, check results on nuclei_output folder${reset}\n\n"
		axiom-scan ${input_file} -m nuclei --nuclei-templates ${NUCLEI_TEMPLATES_PATH} -severity ${crit} -nh -rl $NUCLEI_RATELIMIT -o ${output_dir}/${crit}.txt "${AXIOM_EXTRA_ARGS}" 2>/dev/null
		[[ -s "${output_dir}/${crit}.txt" ]] && cat ${output_dir}/${crit}.txt
	done
	printf "\n\n"
fi
