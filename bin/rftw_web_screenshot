#!/bin/bash

# Default config path
CONFIG_PATH="${RECONFTW_CFG}"

# Check if the config file exists
if [[ -f "${CONFIG_PATH}" ]]; then
    source "${CONFIG_PATH}"
else
    echo "Error: reconftw.cfg not found at ${CONFIG_PATH}!"
    exit 1
fi
# Help menu
display_help() {
	echo "$(basename "$0") [Options]"
	echo
	echo "  -f, --file              File containing domains for web probing"
	echo "  -o, --output            Output file location"
	echo "  -h, --help              Display this help and exit"
	echo
	echo "Example: $0 -f input.txt -o output.txt"
	exit 1
}

# Parse input arguments
while [[ $# -gt 0 ]]; do
	case $1 in
	-f | --file)
		input_file="$2"
		shift
		;;
	-o | --output)
		output_dir="$2"
		shift
		;;
	-h | --help) display_help ;;
	*)
		echo "Unknown parameter passed: $1"
		exit 1
		;;
	esac
	shift
done

# Input validation
if [[ -z ${input_file} ]]; then
	display_help
	exit 1
fi

# Validate file
if [[ ! -f ${input_file} ]]; then
	echo "Error: Specified file does not exist or is not readable."
	exit 1
fi

run_screenshot() {
	num_lines=$(wc -l <${input_file})
	dynamic_gowitness_timeout=$(expr $num_lines \* $GOWITNESS_TIMEOUT_PER_SITE)

	if [[ ! ${AXIOM} == true ]]; then
		[[ -s "${input_file}" ]] && timeout -k 1m ${dynamic_gowitness_timeout}s nuclei -l ${input_file}  -headless -id screenshot -V dir=${output_dir} 2>/dev/null
	else
		timeout -k 1m ${dynamic_gowitness_timeout}s axiom-scan ${input_file} -m nuclei-screenshots -o ${output_dir} "${AXIOM_EXTRA_ARGS}" 2>/dev/null
	fi
}

run_screenshot
